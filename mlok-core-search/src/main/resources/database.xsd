  <xs:element name="field-name" type="field-name">
    <xs:annotation>
      <xs:documentation>
        The field name.
      </xs:documentation>
      <xs:appinfo>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">field name</span>
          specifies the name of the field.</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="include-root" type="boolean">
    <xs:annotation>
      <xs:documentation>
        Includes elements starting at the document root
      </xs:documentation>
      <xs:appinfo>
        <admin:default>false()</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">include 
          document root</span> specifies if this field should begin 
          including elements at the root element for each 
          document (unless that element is explicitly excluded). This
          is set to <code>false</code> by default, which means you must
          explicitly include some elements for the field to have any 
          content.
	</span>
        </admin:help>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">include 
          document root</span> specifies if word query should begin 
          including elements at the root element for each 
          document (unless that element is explicitly excluded). This
          is set to <code>true</code> by default, which means all 
          content is included unless you explicitly exclude one or more
          elements.
	</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="weight">
    <xs:annotation>
      <xs:documentation>
        The weight of an element in a field.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
    <xs:restriction base="xs:double">
      <xs:minInclusive value="0"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="weight" type="weight">
    <xs:annotation>
      <xs:documentation>
        The weight, used to boost or lower relevance scores, of the included 
        element.
      </xs:documentation>
      <xs:appinfo>
        <admin:default>"1.0"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
        <span class="help-text"><span style="color:#800000">weight</span>
	  specifies a query weight that will be passed in with this element
	  to boost or lower the relevance scores.  A weight greater than 1.0 
	  will boost scores and a weight lower than 1.0 will lower scores 
	  for matches within the element.  The weight must be a non-negative
	  number.
	</span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="included-element">
