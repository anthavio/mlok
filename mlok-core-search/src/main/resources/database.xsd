  <xs:element name="language" type="language">
    <xs:annotation>
      <xs:documentation>
        The default language assumed for content (if xml:lang encoding is absent) 
      </xs:documentation>
      <xs:appinfo>
	<admin:select>language</admin:select>
        <admin:default>"en"</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
          <span class="help-text">
          <span style="color:#800000">language</span> 
          specifies the default language for content in this database.  Any
          content without an <code>xml:lang</code> attribute will be indexed
          in the language specifed here.  
          </span>
        </admin:help>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:simpleType name="field-name">
