      <xs:appinfo>
        <admin:default>false()</admin:default>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
          <span class="help-text"><span style="color:#800000">fast reverse
	  searches</span> (valid alerting license key required) specifies 
          whether index terms should be 
          included in the database files to support fast reverse 
          searches. When this parameter is true, cts:reverse-query searches are 
          faster, but document loading is slower and the database files are 
          larger.  </span>
        </admin:help>
	<admin:field-index>true</admin:field-index>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>

  <xs:element name="fast-diacritic-sensitive-searches" type="boolean">
    <xs:annotation>
      <xs:documentation>
