      <xs:element ref="attribute-value" minOccurs="0"/>
    </xs:all>
  </xs:complexType>

  <xs:element name="included-element" type="included-element">
    <xs:annotation>
      <xs:documentation>
        The element included in the field.
      </xs:documentation>
      <xs:appinfo>
        <admin:help xmlns="http://www.w3.org/1999/xhtml">
