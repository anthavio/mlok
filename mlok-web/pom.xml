			<version>4.3.1.Final</version>
		</dependency>
		
		<dependency>
			<groupId>com.anthavio</groupId>
			<artifactId>anthavio-spring</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		
		<!-- web-ui -->
		
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-web</artifactId>
		</dependency>
		
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc</artifactId>
		</dependency>
		
		<dependency>
			<groupId>org.thymeleaf</groupId>
			<artifactId>thymeleaf-spring3</artifactId>
			<version>2.0.15</version>
		</dependency>
		
		<dependency>
			<groupId>nz.net.ultraq.web.thymeleaf</groupId>
			<artifactId>thymeleaf-layout-dialect</artifactId>
			<version>1.0.5</version>
		</dependency>

		<!-- provided - we don't want them in war -->
		
		<dependency>
			<groupId>com.nature.utils</groupId>
			<artifactId>npg-jetty</artifactId>
		</dependency>
		
		<dependency>
			<groupId>com.nature.maven</groupId>
			<artifactId>jetty-deps-all</artifactId>
			<type>pom</type>
			<scope>provided</scope>
		</dependency>

  </dependencies>
  
	<build>
		<plugins>
			
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<attachClasses>true</attachClasses>
				</configuration>
			</plugin>
